<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Robot Profile</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>

    {{#robots}}
    <div>

        <img class="avatar-circle" src="{{avatar}}" alt="">

        <div class="profile-info">
          <h2>{{name}}</h2>
          <p>{{#address.city}}{{address.city}},{{/address.city}} {{address.country}} |
          {{#job}}
            {{job}}, {{company}}
          {{/job}}
          {{^job}}
            Available for hire!
          {{/job}}
          </p>
          <p>{{email}} | {{phone}}</>
        </div>

        <table>
          {{#university}}
          <tr>
            <th>Education</th>
            <td>{{university}}</td>
          </tr>
          {{/university}}


          <tr>
            <th>Skills</th>
            {{#skills}}
            <td>{{.}}</td>
            {{/skills}}
          </tr>

        </table>

    </div>
    {{/robots}}
  </body>
</html>
